tmp=/tmp/import$$
trap "rm -f $tmp" 0 1 3 15


### import variables
cd $FML || exit 1
${MAKE} __import_variables > $tmp
. $tmp


### MAIN
echo ""
echo "--- make documents split"
echo ""
/bin/sh distrib/bin/split_doc

echo ""
echo "--- make namazu index"
echo ""

test -d var/db/index || mkdir var/db/index
/usr/pkg/bin/mknmz -O $PWD/var/db/index $URL_PREFIX/$BRANCH/ var/db/search.index

exit 0
