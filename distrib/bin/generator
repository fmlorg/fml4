#!/bin/sh

PATH=${PATH}:/usr/local/bin:/usr/pkg/bin; export PATH

umask 022

if [ X$FML != X ]; then
	chdir $FML || exit 1
else
	echo "please define \$FML environment variable";
	exit 1
fi

. distrib/etc/config
. distrib/lib/getopt

trap 'rm -f $TMP' 0 1 3 6 9 15

(echo -n "BEGIN:	"; date ) > $DATE_LOG
chdir $FML || exit 1
test -d $DESTDIR/FML || mkdir $DESTDIR/FML # backup directory

. distrib/lib/fyi
. distrib/lib/libinit
. distrib/lib/libgen

INIT 

GEN_LIBRARY # libkern, libcompat_*

INCREMENT_VERSION

CLEAN_UP_SNAPSHOT

MKDIR_DISTRIBUTION

COPY_SOURCES

if [ $package = 1 ]
then
	GEN_DOC
fi

COPY_DOCS


# MAKE_CONFIG_PH_EXAMPLE # not required now?

FIX_DISTRIBUTION_FILE_RCSID
FIX_DISTRIBUTION_FILE_MAKEFILE
FIX_DISTIRUBTION_FILE_INCLUDE
FIX_DISTRIBUTION_LINKS
FIX_DISTRIBUTION_PERMISSION


echo " "; echo "End of makeing distrib ... "; echo " "



if [ $branch = 1 ]
then
	FIX_LANGUATE
	GEN_CONTRIB

	GEN_BRANCH_ARCHIVE

elif [ $package = 0 ]
then
	FIX_LANGUATE
	DISTRIBUTION_PATCHLEVEL_INCREMENT

	(chdir $DESTDIR ; rm -f fml-current; ln -s distrib fml-current)
elif [ $package = 1 ]
then
	FIX_LANGUATE
	GEN_CONTRIB
	GEN_ARCHIVE

	(chdir $DESTDIR ; rm -f fml-current; ln -s $FMLID fml-current)

	# for fml 2.x.y branch series
	# If fml 2.x.y branch series, DO NOT synchronize
	if [ X$IN_RELEASE_BRANCH = X ]
	then
		GEN_WWW
	fi
fi


echo " "; echo "Done. "; echo " "
(echo -n "END:	"; date ) >> $DATE_LOG
