GEN_DOC () {

	echo "Generating Plain Doc"
	(chdir $FML; $MAKE plaindoc);

	echo "Generating WWW Doc"
	(
		echo "Making WWW pages of doc/smm/op => var/html/op";
		chdir $FML; 
		make htmldoc 
	)
}


GEN_WWW () {
	echo "ReGenerating WWW Search Environment";
	(cd $FML; make syncwww search)
}


