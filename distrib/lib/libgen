}


FIX_DISTIRUBTION_FILE_INCLUDE () {
	echo "---Including relations";
	echo "   libexec/fml_local.pl"
	$INCLUDE_PROG $DESTDIR/distrib/libexec/fml_local.pl > /tmp/_fml$$_
	cp /tmp/_fml$$_ $DESTDIR/distrib/libexec/fml_local.pl
	rm -f /tmp/_fml$$_
}



