#!/bin/sh

LINK_DST=$1

#### make depend

cd $FML

mf=/tmp/makefml$$

trap "rm -f $mf" 0 1 3 15

(
	echo /usr/local/SSE/db/fml-j.inv.new: doc/ri*/*wix doc/smm/*wix
	echo "	sh $FML/distrib/bin/split_doc $LINK_DST"
	echo "	(cd /usr/local/SSE; make)"
	echo "	rsync -C --rsh $HOME/sbin/www@ssh -auv \\"
	echo "	$HOME/.www/fml/ mikoto:/usr/local/apache/htdocs/staff/fukachan/fml/"

) > $mf

make -f $mf

exit 0;
