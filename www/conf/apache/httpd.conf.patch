# fml cgi interface
<Directory "_EXEC_DIR_/www/htdocs">
    Options Indexes FollowSymLinks
    AllowOverride AuthConfig
    Order allow,deny
    Allow from all
</Directory>

AccessFileName .htaccess

<Files ~ "^\.ht">
    Order allow,deny
    Deny from all
</Files>

ScriptAlias /cgi-bin/fml/ "_EXEC_DIR_/www/cgi-bin/"

<Directory "_EXEC_DIR_/www/cgi-bin">
    Options None
    AllowOverride AuthConfig
    Order allow,deny
    Allow from all
</Directory>

