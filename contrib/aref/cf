# AREF (Analize Regular Expressional Form) V1
#      we call this "AREF 1", so FRED library is "AREF 0" :-)
#
#   the part after # in a line is a commnet
#

.object	INIT

	DEBUG   = 1
	RFC822  = 1
	ADD_INCLUDE_PATH =  /home/beth/fukachan/w/fml/iij 
	INCLUDE 	 =  aref.ph 


.object MAIL
# なお .begin がなくても先頭から最初の空行までは 
# 自動的に HEADER オブジェクトが適用される

	for ( ^Name:  ^\s*$ )
		YFORM()

#       つまり空行がきたら YFORMの終りとみなす


.object	HEADER

.object	YFORM

	if [ Name: == \S+ ]
		;

	if [ Operator: == (\S+)\s+(.*) ]
		Operator();
	else
		Error()
