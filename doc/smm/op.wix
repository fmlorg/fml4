   ------------------- manami.c -------------------
#include <stdio.h>
main()
{
  setuid(geteuid());
  setgid(getgid());
  execl("/usr/spool/lib/fml.pl", 
	"(fml)", 
	"/usr/spool/manami", 
	"/usr/spool/lib", 
	NULL);
  exit(1);
}
   ------------------- aiko.c -------------------
#include <stdio.h>
main()
{
  setuid(geteuid());
  setgid(getgid());
  execl("/usr/spool/lib/fml.pl", 
	"(fml)", 
	"/usr/spool/aiko", 
	"/usr/spool/lib", 
	NULL);
  exit(1);
}
   -------------------------------------------------


