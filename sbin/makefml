    local($r, $buf);

    while (1) {
	&ShowDeliveryModeMenu(*MAKE_FML);

	$tag = $CurTag;
	$CurTag .= "   ";
	$r = &Query("Delivery Mode ", "1-2", "[1-2]", "0");

	$CurTag .= "   ";

	if ($r == 0) {
	    last;
	}
	elsif ($r == 1) {
	    $MAKE_FML{"DELIVERY_MODE"} = "distribute";
	}
	elsif ($r == 2) {
	    $MAKE_FML{"DELIVERY_MODE"} = "default";
	    # loop once again;
	}

